<div class="tophead">
  <div class="container-fluid">
    <div class="clicktitle">
      <a href="#" target="_blank"> <%= @gallery.name %> </a>
    </div>
    <%= link_to "Add Picture", new_gallery_picture_path(@gallery), class: "btn btn-primary btn-lg" %>
    <%= link_to "Share", share_gallery_path(@gallery), class: "btn btn-success btn-lg" %>
    <%= link_to "Edit", edit_gallery_path(@gallery), class: "btn btn-default btn-lg" %>
  </div>
</div>

<% @pictures.each do |p| %>
  <div class="col-md-3 col-sm-6">
    <%= link_to gallery_picture_path(@gallery, p.id), class: "btn btn-default" do %>
      <%= image_tag p.url.versions[:standard], class: "img-responsive" %>
    <% end %>
  </div>
<% end %>
